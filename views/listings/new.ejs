<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New Listing</title>

    <!-- Your themed stylesheet (no Bootstrap CSS) -->
    <link rel="stylesheet" href="/css/listings/new.css" />
  </head>
  <body>
    <header class="header">
      <!-- Left: Logo + Become a host -->
      <div class="header__left">
        <a class="logo" href="/listings">
          <img src="/images/logo.png" alt="homeAway logo" />
          <span class="logo-text">homeAway</span>
        </a>

        <a href="/listings/new" class="btn-host">Become a host</a>
      </div>

      <!-- Right: Auth links (use your own URLs later) -->
      <nav class="header__right">
        <% if (user) { %>
        <a href="/user/logout" class="nav-link">Log out</a>
        <% } else { %>
        <a href="/user/login" class="nav-link">Log in</a>
        <% } %>
      </nav>
    </header>

    <!-- Form Container -->
    <div class="form-container">
      <h1>Add your place to homeAway</h1>
      <h2>Fill in the details below to register yourself.</h2>

      <form
        id="listing-form"
        action="/listings/new"
        method="POST"
        novalidate
        enctype="multipart/form-data"
      >
        <!-- Title -->
        <div class="field">
          <label for="title">Title</label>
          <input
            type="text"
            name="title"
            id="title"
            placeholder="Cozy studio near city center"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Title is required.</div>
        </div>

        <!-- Description -->
        <div class="field">
          <label for="description">Description</label>
          <textarea
            name="description"
            id="description"
            placeholder="Describe your place, amenities, and nearby attractions…"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Description is required.</div>
        </div>

        <!-- Image fields in a row -->
        <div class="form-row">
          <div class="field">
            <label for="url">Image URL</label>
            <input
              type="String"
              name="url"
              id="url"
              placeholder="https://example.com/living-room.jpg"
              required
            />
          </div>
          <div class="field">
            <label for="filename">Upload Listing Image: </label>
            <input type="file" name="filename" id="filename" required />
          </div>
        </div>

        <!-- Price -->
        <div class="field">
          <label for="price">Price (₹)</label>
          <input
            type="number"
            name="price"
            id="price"
            placeholder="2500"
            min="0"
            step="1"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <!-- Location + Country in a row -->
        <div class="form-row">
          <div class="field">
            <label for="location">Location</label>
            <input
              type="text"
              name="location"
              id="location"
              placeholder="Indore"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Location is required.</div>
          </div>
          <div class="field">
            <label for="country">Country</label>
            <input
              type="text"
              name="country"
              id="country"
              placeholder="India"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Country is required.</div>
          </div>
        </div>

        <div class="actions">
          <button type="submit" id="collectDataBtn">Submit</button>
          <button type="reset" class="secondary">Reset</button>
        </div>
      </form>
    </div>

    <!-- Minimal validation script (no Bootstrap needed) -->
    <script>
      (function () {
        "use strict";
        const form = document.getElementById("listing-form");
        form.addEventListener("submit", function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add("was-validated");
        });
      })();
    </script>
  </body>
</html>
