<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sign up • homeAway</title>
    <link rel="stylesheet" href="/css/users/signup.css" />
  </head>
  <body>
    <header class="header">
      <div class="logo">
        <img src="/images/logo.png" alt="homeAway logo" />
        <a href="/listings">homeAway</a>
      </div>
    </header>

    <!-- Flash Messages -->
    <% if (success && success.length) { %>
    <div class="alert alert-success"><%= success[0] %></div>
    <% } %> <% if (error && error.length) { %>
    <div class="alert alert-danger"><%= error[0] %></div>
    <% } %> <% if (info && info.length) { %>
    <div class="alert alert-info"><%= info[0] %></div>
    <% } %>

    <main class="container">
      <section class="card auth-card">
        <h1 class="title">Create your account</h1>
        <p class="subtitle">Join homeAway to explore and host amazing stays.</p>

        <form
          action="/user/signup"
          method="POST"
          class="form"
          autocomplete="off"
          novalidate
        >
          <!-- Username -->

          <div class="field">
            <label for="username">Username</label>
            <input
              type="text"
              id="username"
              name="username"
              required
              minlength="3"
              maxlength="20"
              pattern="^[a-zA-Z0-9_\.]+$"
              placeholder="your_username"
              autocomplete="username"
              aria-describedby="userHelp"
            />
            <!-- <small id="userHelp" class="hint"
              >3–20 characters: letters, numbers, _ or .</small
            > -->
            <p class="error">
              Username must be 3–20 characters (letters, numbers, _ or .)
            </p>
          </div>

          <!-- Email -->
          <div class="field">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="you@example.com"
              inputmode="email"
              autocomplete="email"
              aria-describedby="emailHelp"
            />
            <!-- <small id="emailHelp" class="hint"
              >We’ll never share your email.</small
            > -->
            <p class="error">Please enter a valid email address.</p>
          </div>

          <!-- Password -->
          <div class="field">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              required
              minlength="8"
              pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,}$"
              placeholder="••••••••"
              autocomplete="new-password"
              aria-describedby="passHelp"
            />
            <!-- <small id="passHelp" class="hint">
              Min 8 chars with at least 1 uppercase, 1 lowercase, and 1 number.
            </small> -->
            <p class="error">
              Password must be 8+ chars with upper, lower, and a number.
            </p>
          </div>

          <button class="btn btn-primary" type="submit">Create account</button>
          <p class="foot-note">
            By continuing, you agree to our <a href="#">Terms</a> and
            <a href="#">Privacy Policy</a>.
          </p>
        </form>
      </section>
    </main>
  </body>
</html>
